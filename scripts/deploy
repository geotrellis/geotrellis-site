#!/bin/bash


set -e

if [[ -n "${GT_SITE_DEBUG}" ]]; then
    set -x
fi

DIR="$(dirname "$0")"

function usage() {
    echo -n \
"Usage: $(basename "$0") COMMAND OPTION[S]
Deploy AWS infrastructure using Terraform.
This script is only for use with Travis CI.
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    if [ "${1:-}" = "--help" ]; then
        usage
        exit 0
    fi
    pushd "${DIR}/../"
    ./scripts/cipublish
    ./scripts/infra plan
    ./scripts/infra apply
    popd
fi